---
import { getCollection } from 'astro:content'
import BaseLayout from '../../layouts/BaseLayout.astro'
import ExtranjeriaCard from '../../components/ExtranjeriaCard.astro'

const posts = (await getCollection('extranjeria')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
---

<BaseLayout title="Guía de Extranjería en Galicia">
	<main class="app-container pt-36">
		<h1 class="text-6xl pb-8 font-bold">Guía de Extranjería Galicia</h1>
		<p class="md:w-2/3 text-lg leading-[2rem]">
			Consulta los pasos, requisitos y tasas actualizadas para tus trámites de
			extranjería en Galicia.
		</p>
	</main>
	<section class="app-container py-12">
		<ul class="posts-grid-container">
			{
				posts.map((post) => (
					<li>
						<ExtranjeriaCard post={post} />
					</li>
				))
			}
		</ul>
	</section>
</BaseLayout>
